<UserControl xmlns="https://github.com/avaloniaui"
	     xmlns:AvalonEdit="using:AvaloniaEdit"
	     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	     xmlns:vm="clr-namespace:MigrationApp.GUI.ViewModels"
	     x:Class="MigrationApp.GUI.Views.MessageDisplay"
	     x:DataType="vm:MessageDisplayViewModel">

  <Grid Margin="10,0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Button Grid.Row="0"
	    Content="{Binding ShowDetailsButtonText}"
	    Command="{Binding ToggleDetailsCommand}"
	    HorizontalAlignment="Right"
	    IsVisible="false"/>

    <StackPanel Grid.Row="1" IsVisible="{Binding IsDetailsVisible}">
      <TextBox
	  Classes="message-textbox"
	  Name="MessageTextBox"
	  IsReadOnly="True"
	  Text="{Binding Messages}"
	  AcceptsReturn="True"
	  TextWrapping="Wrap"
	  Foreground="Black"
	  FontFamily="Consolas"
	  FontSize="14"
	  Height="200" />

      <CheckBox x:Name="KeepScrolledCheckBox">
	Keep scrolled to bottom
      </CheckBox>
    </StackPanel>
  </Grid>

</UserControl>
